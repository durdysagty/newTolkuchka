@model IQueryable<Brand>

<div class="px-1 row justify-content-center justify-content-md-start">
    @foreach (Brand b in Model)
    {
        string id = b.Id + ".jpg";
        <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-3 px-0">
            <a href="/@PathService.GetModelUrl(ConstantsService.BRAND, b.Id)">
                <div class="p-3">
                    <img src="@PathService.GetImageRelativePath(ConstantsService.BRAND, b.Id)" class="card-img-top" alt="@b.Name" />
                </div>
                <div class="text-center">@b.Name</div>
            </a>
        </div>
    }
</div>
